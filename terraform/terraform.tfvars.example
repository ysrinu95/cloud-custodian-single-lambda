# Example terraform.tfvars file
# Copy this to terraform.tfvars and customize

# AWS Configuration
aws_region             = "us-east-1"
environment            = "dev"
project_name           = "cloud-custodian"

# Lambda Configuration
lambda_execution_mode  = "native"  # or "cli"
lambda_timeout         = 300       # 5 minutes
lambda_memory_size     = 512       # MB
log_retention_days     = 7

# EventBridge Configuration
enable_eventbridge_rule = true

# S3 Policy Storage (REQUIRED for event-driven architecture)
# This bucket stores:
# 1. Policy mapping configuration (policy-mapping.json)
# 2. Cloud Custodian policy files (s3-bucket-security.yml, etc.)
policy_bucket          = "ysr95-custodian-policies"  # CHANGE THIS to your bucket name
policy_mapping_key     = "config/policy-mapping.json"

# Optional: Path to policy file in Lambda package (for backward compatibility)
policy_path            = "/var/task/policies/sample-policies.yml"

# Optional: Use existing Lambda layer
# custodian_layer_arn = "arn:aws:lambda:us-east-1:123456789012:layer:cloud-custodian-layer:1"

# Additional tags
tags = {
  Project     = "CloudCustodian"
  Environment = "dev"
  ManagedBy   = "Terraform"
}
