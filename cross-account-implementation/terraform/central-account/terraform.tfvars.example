# AWS Configuration
aws_region  = "us-east-1"
environment = "prod"

# Member Accounts
# Add all AWS account IDs that will send events to the central bus
member_account_ids = [
  "813185901390"  # Cloud Custodian Test Member Account
]

# S3 Bucket for Policies
policy_bucket        = "custodian-policies-172327596604"  # Central account policy bucket
create_policy_bucket = true  # Set to false if bucket already exists

# Lambda Configuration
lambda_package_path = "../lambda-function.zip"  # Path to your Lambda zip file
lambda_timeout      = 900                        # 15 minutes
lambda_memory_size  = 512                        # 512 MB

# Logging
log_level          = "INFO"
log_retention_days = 30

# Notifications (Optional)
create_notification_queue = false
# notification_queue_arn  = "arn:aws:sqs:us-east-1:999999999999:existing-queue"

# Additional Tags
tags = {
  Project   = "Cloud Custodian"
  Team      = "Security"
  ManagedBy = "Terraform"
}
